%default-actions warn
%baseclass-preinclude "refpersys.hh"
%error-verbose
%no-lines
%print-tokens
// parser class
%class-name RpsBisPpRepl_Parser
%filenames _bispprepl_rps
%debug
%start repl_atom

%token<intptr_t>  TOK_INT                  // integral numbers
%token<double> TOK_DOUBLE
%token<Rps_Oid>  TOK_OID
%token<std::string>  TOK_STRING

%%
/// grammar rules below
repl_atom: TOK_INT {
#pragma message "repl_atom is TOK_INT"
  $$ = Rps_Value::make_tagged_int($1);
}

         | TOK_DOUBLE {
#pragma message "repl_atom is TOK_DOUBLE"
  $$ = Rps_DoubleValue($1);
};

